{% extends 'base.html.twig' %}

{% block title %}Liste des categorys{% endblock %}

{% block body %}
    <h1>Liste des categorys</h1>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            {% for category in categorys %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td>{{ category.name }}</td>

                </tr>
            {% endfor %}
        </tbody>
    </table>
    <button><a href="{{ path('add_category') }}">Add</a></button>
    
{% endblock %}